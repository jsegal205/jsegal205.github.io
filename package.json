{
  "name": "jsegal205.github.io",
  "homepage": "https://projects.jimsegal.com",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@sentry/react": "^6.2.2",
    "@sentry/tracing": "^6.2.2",
    "axios": "^0.21.1",
    "minimist": "^1.2.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-ga": "^3.3.0",
    "react-markdown": "^4.3.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "recharts": "^1.8.5"
  },
  "scripts": {
    "start": "PORT=8100 react-scripts start",
    "build": "react-scripts build",
    "test": "jest --colors --verbose --no-cache -u",
    "ci-test": "jest --colors --verbose --no-cache --ci",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "prettier": "prettier --write '**/*.{js,css,html}'",
    "check-prettier": "prettier --check '**/*.{js,css,html}'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/react-hooks": "^5.1.0",
    "@testing-library/user-event": "^12.8.3",
    "axios-mock-adapter": "^1.19.0",
    "gh-pages": "^3.1.0",
    "prettier": "^2.2.1",
    "react-test-renderer": "^16.14.0",
    "snapshot-diff": "^0.8.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "src/index.js",
      "src/serviceWorker.js",
      "src/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js",
      "<rootDir>/src/**/?(*.)(spec|test).js"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/node_modules/react-scripts/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/node_modules/react-scripts/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$",
      "src/index.js",
      "src/serviceWorker.js",
      "src/setupTests.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
